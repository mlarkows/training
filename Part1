#Zad3
a = int(input('podaj wartosc a'))
b = int(input('podaj wartosc b'))
znak = input('podaj znak dzialania')
if znak == '*':
    print (a*b)
elif znak == '-':
    print (a-b)
elif znak == '+':
    print (a+b)
elif znak == '/':
    if b == 0:
	    print ('nie mozna dzielic przez 0')
    else:
	    print (a/b)
      
#Zad4
x1 = int(input('podaj poczatek przedzialu liczbowego: '))
x2 = int(input('podaj konie przedzialu liczbowego: '))
numbers = list()
for x in range (x1, x2):
    if x%5 == 0:
	    numbers.append(x)
print (numbers)

#Zad5
a = int(input('Podaj 1. dowolna liczbe: '))
b = int(input('Podaj 2. dowolna liczbe: '))
c = int(input('Podaj 3. dowolna liczbe: '))
d = int(input('Podaj 4. dowolna liczbe: '))
e = int(input('Podaj 5. dowolna liczbe: '))
f = int(input('Podaj 6. dowolna liczbe: '))
list = [a,b,c,d,e,f]
print (list)
list.sort()
print (list)

